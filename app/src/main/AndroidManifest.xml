<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meetingroomscheduler">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.AdminPage"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ManageUsers"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.CreateUser"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ManageRooms"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.CreateRoom"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ReadWriteUserPage"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ReadOnlyUserPage"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ScheduleActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ScheduleRoomActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.ReadMyInvitations"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activity.EditSchedule"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>