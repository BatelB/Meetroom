<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invited users 0/0"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="6sp"
        android:textStyle="bold"
        android:textColor="@color/color_6"
        android:id="@+id/invited_dialog_counter"
        android:gravity="center"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/invited_dialog_counter"
        android:layout_above="@+id/footer"
        android:layout_margin="4sp"
        android:id="@+id/invite_dialog_listview">

    </ListView>

    <ProgressBar
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/invite_dialog_progressbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/footer"
        android:layout_marginBottom="4sp"
        android:gravity="center">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dark_button_background"
            android:textColor="#ffffff"
            android:padding="10sp"
            android:gravity="center"
            android:text="SUBMIT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="4sp"
            android:layout_marginLeft="2sp"
            android:id="@+id/invite_dialog_add"
            />

    </LinearLayout>


</RelativeLayout>